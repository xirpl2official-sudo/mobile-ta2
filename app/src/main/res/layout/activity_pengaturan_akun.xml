<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PengaturanAkunActivity">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_menu_atas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08" />

    <!-- Header Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_tombolback"
            android:contentDescription="@string/Kembali"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@android:color/white" />

        <!-- Logo Sekolah -->
        <ImageView
            android:id="@+id/logoSekolah"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo_smk"
            android:contentDescription="Logo SMKN 2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/logoSekolah"
            app:layout_constraintEnd_toStartOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Pengaturan"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_beranda"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Stemdasi"
                android:textColor="#E0E0E0"
                android:textSize="@dimen/text_smkn2s" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="24dp">

            <!-- Section Title -->
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PengaturanAkun"
                android:textColor="#000000"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSectionSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/KelolaInformasiAkun"
                android:textColor="#757575"
                android:textSize="@dimen/text_kelola"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTitle" />

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/tvSectionSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_medium">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large">

                    <!-- Profile Photo Section -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/photoSection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Profile Photo Circle -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardProfilePhoto"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:cardCornerRadius="100dp"
                            app:cardBackgroundColor="#BDBDBD"
                            app:cardElevation="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintWidth_percent="@dimen/constraint_profile_photo_width"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/tvInitial"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="K"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                        <!-- Photo Info -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/FotoProfil"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_foto_profil"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/cardProfilePhoto"
                            app:layout_constraintTop_toTopOf="@id/cardProfilePhoto"
                            app:layout_constraintBottom_toBottomOf="@id/cardProfilePhoto" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- NIS Field -->
                    <TextView
                        android:id="@+id/labelNIS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NIS"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_button"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/photoSection" />

                    <TextView
                        android:id="@+id/etNIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="778310383063"
                        android:textSize="@dimen/text_input_hint"
                        android:padding="12dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelNIS" />

                    <!-- Nama Lengkap Field -->
                    <TextView
                        android:id="@+id/labelNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NamaLengkap"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_button"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etNIS" />

                    <TextView
                        android:id="@+id/etNamaLengkap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kenf J Luffy"
                        android:textSize="@dimen/text_input_hint"
                        android:padding="12dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelNama" />

                    <!-- Jenis Kelamin Field -->
                    <TextView
                        android:id="@+id/labelJenisKelamin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/JenisKelamin"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_button"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etNamaLengkap" />

                    <TextView
                        android:id="@+id/tvJenisKelamin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Laki - laki"
                        android:textSize="@dimen/text_input_hint"
                        android:padding="12dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelJenisKelamin" />

                    <!-- Email Field -->
                    <TextView
                        android:id="@+id/labelEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Email"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_button"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin" />

                    <TextView
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kenfjluffy@gmail.com"
                        android:textSize="@dimen/text_input_hint"
                        android:padding="12dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelEmail" />

                    <TextView
                        android:id="@+id/tvChangeEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MengubahEmail"
                        android:textColor="#2196F3"
                        android:textSize="@dimen/text_email"
                        android:layout_marginTop="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etEmail" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
