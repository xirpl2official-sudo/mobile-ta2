<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0e27">

    <!-- Header with Gradient Background -->
    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_menu_atas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"/>

    <!-- Back Button (aligned to right) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tombolback"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Back"
        android:layout_marginEnd="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header Title (centered precisely) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PINDAI QR"
        android:textColor="@android:color/white"
        android:textSize="@dimen/qr_header_title_size"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Guideline for main title position -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>

    <!-- Main Title -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PINDAI KODE QR"
        android:textColor="@android:color/white"
        android:textSize="@dimen/qr_main_title_size"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/guidelineMainTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arahkan kamera ke Kode QR"
        android:textColor="#9ca3af"
        android:textSize="@dimen/qr_subtitle_size"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/spacing_text"
        app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Guideline for scanner frame center -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineScannerTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26"/>


    <!-- Scanner Box (White Frame) - Tablet: 50% width, 60% height (no ratio) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardScanner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/guidelineScannerTop"
        app:layout_constraintBottom_toBottomOf="@+id/Bawah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.30"
        app:layout_constraintHeight_percent="0.58"
        app:layout_constraintVertical_bias="0.0">

        <!-- Inner Container for Padding -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/qr_frame_padding">

            <!-- Black Scanner Background with rounded corners (278:278 square) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/scannerInnerCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnScanInner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0">

                <!-- ZXing Scanner View -->
                <com.journeyapps.barcodescanner.BarcodeView
                    android:id="@+id/barcodeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <!-- Button inside frame (228:48) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnScanInner"
                android:layout_width="0dp"
                android:layout_height="@dimen/qr_button_height"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#3D92DA"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/scannerInnerCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8">

                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PINDAI"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/qr_button_text_size" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#27ae60"
        android:textSize="@dimen/qr_subtitle_size"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardScanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/Bawah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_menu_atas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        />


</androidx.constraintlayout.widget.ConstraintLayout>